{
  "announcement": {
    "template_name": "Announcement Email",
    "slots_schema": {
      "required": ["hero_title", "intro", "benefits_bullets", "cta_primary"],
      "properties": {
        "hero_title": {"maxLength": 80},
        "intro": {"maxLength": 300},
        "benefits_bullets": {"type": "array", "minItems": 2, "maxItems": 5},
        "highlight_block": {
          "properties": {
            "title": {"maxLength": 60},
            "desc": {"maxLength": 300},
            "speaker": {"maxLength": 80}
          }
        },
        "cta_primary": {"properties": {"id": {}, "text": {}}},
        "cta_secondary": {"properties": {"id": {}, "text": {}}},
        "footer_note": {"maxLength": 200}
      }
    },
    "html_layout": "<!DOCTYPE html PUBLIC \"-//W3C//DTD XHTML 1.0 Transitional//EN\" \"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd\">\n<html xmlns=\"http://www.w3.org/1999/xhtml\">\n<head>\n  <meta http-equiv=\"Content-Type\" content=\"text/html; charset=UTF-8\" />\n  <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\"/>\n  <title>{{slot.hero_title}}</title>\n</head>\n<body style=\"margin: 0; padding: 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;\">\n  <!-- Preheader -->\n  <div style=\"display: none; max-height: 0; overflow: hidden;\">{{preheader}}</div>\n  \n  <table border=\"0\" cellpadding=\"0\" cellspacing=\"0\" width=\"100%\" style=\"background-color: #f4f4f4;\">\n    <tr>\n      <td align=\"center\" style=\"padding: 40px 20px;\">\n        <!-- Main Container -->\n        <table border=\"0\" cellpadding=\"0\" cellspacing=\"0\" width=\"600\" style=\"background-color: #ffffff; border-radius: 8px; overflow: hidden;\">\n          \n          <!-- Logo Header -->\n          <tr>\n            <td align=\"center\" style=\"padding: 30px 20px 20px;\">\n              <img src=\"{{logo_url}}\" alt=\"{{event_name}}\" width=\"200\" height=\"auto\" style=\"display: block; max-width: 200px; height: auto;\" />\n            </td>\n          </tr>\n          \n          <!-- Hero Title -->\n          <tr>\n            <td style=\"padding: 20px 40px;\">\n              <h1 style=\"margin: 0; font-size: 28px; line-height: 1.3; color: #1a1a1a; font-weight: 700;\">{{slot.hero_title}}</h1>\n            </td>\n          </tr>\n          \n          <!-- Intro -->\n          <tr>\n            <td style=\"padding: 0 40px 20px;\">\n              <p style=\"margin: 0; font-size: 16px; line-height: 1.6; color: #4a4a4a;\">{{slot.intro}}</p>\n            </td>\n          </tr>\n          \n          <!-- Benefits Bullets -->\n          <tr>\n            <td style=\"padding: 0 40px 30px;\">\n              <ul style=\"margin: 0; padding-left: 20px; font-size: 15px; line-height: 1.8; color: #4a4a4a;\">\n                {{slot.benefits_bullets}}\n              </ul>\n            </td>\n          </tr>\n          \n          <!-- Highlight Block (Optional) -->\n          <tr>\n            <td style=\"padding: 0 40px 30px;\">\n              <table border=\"0\" cellpadding=\"20\" cellspacing=\"0\" width=\"100%\" style=\"background-color: #f8f9fa; border-left: 4px solid #0066cc; border-radius: 4px;\">\n                <tr>\n                  <td>\n                    <h3 style=\"margin: 0 0 10px; font-size: 18px; color: #1a1a1a; font-weight: 600;\">{{slot.highlight_block.title}}</h3>\n                    <p style=\"margin: 0 0 10px; font-size: 14px; line-height: 1.6; color: #4a4a4a;\">{{slot.highlight_block.desc}}</p>\n                    <p style=\"margin: 0; font-size: 13px; color: #666; font-style: italic;\">{{slot.highlight_block.speaker}}</p>\n                  </td>\n                </tr>\n              </table>\n            </td>\n          </tr>\n          \n          <!-- Primary CTA Button -->\n          <tr>\n            <td align=\"center\" style=\"padding: 0 40px 20px;\">\n              <!--[if mso]>\n              <v:roundrect xmlns:v=\"urn:schemas-microsoft-com:vml\" xmlns:w=\"urn:schemas-microsoft-com:office:word\" href=\"{{CTA_URL_PRIMARY}}\" style=\"height:48px;v-text-anchor:middle;width:250px;\" arcsize=\"10%\" stroke=\"f\" fillcolor=\"#0066cc\">\n                <w:anchorlock/>\n                <center style=\"color:#ffffff;font-family:sans-serif;font-size:16px;font-weight:bold;\">{{CTA_TEXT_PRIMARY}}</center>\n              </v:roundrect>\n              <![endif]-->\n              <!--[if !mso]><!-->\n              <a href=\"{{CTA_URL_PRIMARY}}\" style=\"display: inline-block; padding: 14px 40px; background-color: #0066cc; color: #ffffff; text-decoration: none; border-radius: 4px; font-size: 16px; font-weight: 600;\">{{CTA_TEXT_PRIMARY}}</a>\n              <!--<![endif]-->\n            </td>\n          </tr>\n          \n          <!-- Secondary CTA (Optional) -->\n          <tr>\n            <td align=\"center\" style=\"padding: 0 40px 30px;\">\n              <a href=\"{{CTA_URL_SECONDARY}}\" style=\"color: #0066cc; text-decoration: underline; font-size: 14px;\">{{CTA_TEXT_SECONDARY}}</a>\n            </td>\n          </tr>\n          \n          <!-- Event Details -->\n          <tr>\n            <td style=\"padding: 20px 40px; background-color: #f8f9fa; border-top: 1px solid #e0e0e0;\">\n              <p style=\"margin: 0; font-size: 14px; line-height: 1.6; color: #666;\">\n                <strong>{{event_name}}</strong><br/>\n                üìÖ {{event_date}}<br/>\n                üìç {{event_venue}}\n              </p>\n            </td>\n          </tr>\n          \n          <!-- Footer Note -->\n          <tr>\n            <td style=\"padding: 20px 40px;\">\n              <p style=\"margin: 0; font-size: 13px; line-height: 1.5; color: #999;\">{{slot.footer_note}}</p>\n            </td>\n          </tr>\n          \n          <!-- Unsubscribe -->\n          <tr>\n            <td align=\"center\" style=\"padding: 20px 40px;\">\n              <p style=\"margin: 0; font-size: 12px; color: #999;\">\n                <a href=\"{{unsubscribe_url}}\" style=\"color: #999; text-decoration: underline;\">–û—Ç–ø–∏—Å–∞—Ç—å—Å—è –æ—Ç —Ä–∞—Å—Å—ã–ª–∫–∏</a>\n              </p>\n            </td>\n          </tr>\n          \n        </table>\n      </td>\n    </tr>\n  </table>\n</body>\n</html>"
  },
  
  "invite": {
