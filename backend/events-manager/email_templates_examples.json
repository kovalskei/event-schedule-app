    "html_layout": "<!DOCTYPE html PUBLIC \"-//W3C//DTD XHTML 1.0 Transitional//EN\" \"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd\">\n<html xmlns=\"http://www.w3.org/1999/xhtml\">\n<head>\n  <meta http-equiv=\"Content-Type\" content=\"text/html; charset=UTF-8\" />\n  <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\"/>\n</head>\n<body style=\"margin: 0; padding: 0; font-family: Georgia, serif;\">\n  <div style=\"display: none;\">{{preheader}}</div>\n  <table border=\"0\" cellpadding=\"0\" cellspacing=\"0\" width=\"100%\" style=\"background-color: #fafafa;\">\n    <tr>\n      <td align=\"center\" style=\"padding: 40px 20px;\">\n        <table border=\"0\" cellpadding=\"0\" cellspacing=\"0\" width=\"600\" style=\"background-color: #ffffff;\">\n          <tr>\n            <td style=\"padding: 50px 40px 30px;\">\n              <h1 style=\"margin: 0; font-size: 32px; line-height: 1.2; color: #2c2c2c;\">{{slot.hero_title}}</h1>\n            </td>\n          </tr>\n          <tr>\n            <td style=\"padding: 0 40px 30px;\">\n              <p style=\"margin: 0; font-size: 17px; line-height: 1.7; color: #4a4a4a;\">{{slot.intro}}</p>\n            </td>\n          </tr>\n          <tr>\n            <td style=\"padding: 0 40px 20px;\">\n              <ul style=\"margin: 0; padding-left: 20px; font-size: 16px; line-height: 1.8; color: #4a4a4a;\">{{slot.speakers_list}}</ul>\n            </td>\n          </tr>\n          <tr>\n            <td style=\"padding: 0 40px 30px;\">\n              <p style=\"margin: 0; font-size: 15px; color: #cc0000; font-weight: 600;\">‚è∞ {{slot.urgency_text}}</p>\n            </td>\n          </tr>\n          <tr>\n            <td align=\"center\" style=\"padding: 0 40px 40px;\">\n              <a href=\"{{CTA_URL_PRIMARY}}\" style=\"display: inline-block; padding: 16px 50px; background-color: #cc0000; color: #ffffff; text-decoration: none; font-size: 18px; font-weight: 600;\">{{CTA_TEXT_PRIMARY}}</a>\n            </td>\n          </tr>\n          <tr>\n            <td style=\"padding: 20px 40px; border-top: 1px solid #e0e0e0;\">\n              <p style=\"margin: 0; font-size: 13px; color: #999;\">{{slot.footer_note}}</p>\n            </td>\n          </tr>\n          <tr>\n            <td align=\"center\" style=\"padding: 20px;\">\n              <a href=\"{{unsubscribe_url}}\" style=\"font-size: 12px; color: #999;\">–û—Ç–ø–∏—Å–∞—Ç—å—Å—è</a>\n            </td>\n          </tr>\n        </table>\n      </td>\n    </tr>\n  </table>\n</body>\n</html>"
  },
  
  "reminder": {
    "template_name": "Event Reminder",
    "slots_schema": {
      "required": ["hero_title", "urgency_message", "key_highlights", "cta_primary"],
      "properties": {
        "hero_title": {"maxLength": 70},
        "urgency_message": {"maxLength": 150},
        "key_highlights": {"type": "array", "minItems": 2, "maxItems": 4},
        "cta_primary": {"properties": {"id": {}, "text": {}}},
        "logistics_note": {"maxLength": 200}
      }
    },
    "html_layout": "<!DOCTYPE html PUBLIC \"-//W3C//DTD XHTML 1.0 Transitional//EN\" \"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd\">\n<html xmlns=\"http://www.w3.org/1999/xhtml\">\n<head>\n  <meta http-equiv=\"Content-Type\" content=\"text/html; charset=UTF-8\" />\n  <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\"/>\n</head>\n<body style=\"margin: 0; padding: 0; font-family: Arial, sans-serif;\">\n  <div style=\"display: none;\">{{preheader}}</div>\n  <table border=\"0\" cellpadding=\"0\" cellspacing=\"0\" width=\"100%\" style=\"background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);\">\n    <tr>\n      <td align=\"center\" style=\"padding: 30px 20px;\">\n        <table border=\"0\" cellpadding=\"0\" cellspacing=\"0\" width=\"600\" style=\"background-color: #ffffff; border-radius: 12px;\">\n          <tr>\n            <td align=\"center\" style=\"padding: 40px 30px 20px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 12px 12px 0 0;\">\n              <h1 style=\"margin: 0; font-size: 30px; color: #ffffff; font-weight: 700;\">‚è∞ {{slot.hero_title}}</h1>\n            </td>\n          </tr>\n          <tr>\n            <td style=\"padding: 30px 40px 20px;\">\n              <p style=\"margin: 0; font-size: 18px; line-height: 1.5; color: #cc0000; font-weight: 600; text-align: center;\">{{slot.urgency_message}}</p>\n            </td>\n          </tr>\n          <tr>\n            <td style=\"padding: 0 40px 30px;\">\n              <ul style=\"margin: 0; padding-left: 20px; font-size: 16px; line-height: 1.8; color: #4a4a4a;\">{{slot.key_highlights}}</ul>\n            </td>\n          </tr>\n          <tr>\n            <td align=\"center\" style=\"padding: 0 40px 30px;\">\n              <a href=\"{{CTA_URL_PRIMARY}}\" style=\"display: inline-block; padding: 16px 60px; background-color: #667eea; color: #ffffff; text-decoration: none; border-radius: 50px; font-size: 17px; font-weight: 600; box-shadow: 0 4px 10px rgba(102, 126, 234, 0.4);\">{{CTA_TEXT_PRIMARY}}</a>\n            </td>\n          </tr>\n          <tr>\n            <td style=\"padding: 20px 40px; background-color: #f0f0f0; border-top: 1px solid #ddd;\">\n              <p style=\"margin: 0; font-size: 14px; color: #666;\">üìç {{slot.logistics_note}}</p>\n            </td>\n          </tr>\n          <tr>\n            <td style=\"padding: 20px 40px;\">\n              <p style=\"margin: 0; font-size: 13px; color: #666; line-height: 1.6;\">{{event_name}} ‚Ä¢ {{event_date}} ‚Ä¢ {{event_venue}}</p>\n            </td>\n          </tr>\n          <tr>\n            <td align=\"center\" style=\"padding: 20px;\">\n              <a href=\"{{unsubscribe_url}}\" style=\"font-size: 12px; color: #999;\">–û—Ç–ø–∏—Å–∞—Ç—å—Å—è</a>\n            </td>\n          </tr>\n        </table>\n      </td>\n    </tr>\n  </table>\n</body>\n</html>"
  }
}
